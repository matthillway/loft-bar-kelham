---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "LOFT | Cocktail Bar Kelham Island Sheffield",
  description = "Discover LOFT Bar Kelham - Sheffield's premier cocktail bar in the heart of Kelham Island. Industrial heritage meets modern mixology overlooking the River Don."
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#1a1a1a" />

    <!-- Open Graph / Social -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="LOFT Bar Kelham" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.svg" />

    <!-- Preconnect for Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet" />

    <title>{title}</title>
  </head>
  <body class="bg-[#1a1a1a] text-[#f5f5dc] min-h-screen antialiased">
    <a href="#about" class="sr-only focus:not-sr-only focus:absolute focus:z-[100] focus:bg-[#b87333] focus:text-[#1a1a1a] focus:px-4 focus:py-2 focus:top-2 focus:left-2 focus:rounded">
      Skip to content
    </a>
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
