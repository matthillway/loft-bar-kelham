---
interface Cocktail {
  name: string;
  description: string;
  price: string;
}

const cocktails: Cocktail[] = [
  {
    name: "Kelham Mule",
    description: "Vodka, ginger beer, lime, copper pot garnish",
    price: "9.50",
  },
  {
    name: "The Steelworker",
    description: "Bourbon, honey, lemon, bitters",
    price: "10",
  },
  {
    name: "River Don Old Fashioned",
    description: "Rye whiskey, demerara, Angostura",
    price: "10.50",
  },
  {
    name: "Garden Spritz",
    description: "Aperol, prosecco, elderflower, fresh herbs",
    price: "9.50",
  },
];
---

<section id="drinks" class="bg-[#5D6B5D] py-20 px-6">
  <div class="max-w-4xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <span class="text-[#F5F5F0]/60 text-sm tracking-widest uppercase mb-3 block">
        The Menu
      </span>
      <h2 class="font-sans text-3xl md:text-4xl text-[#F5F5F0] tracking-[0.1em] uppercase font-light">
        Signature Cocktails
      </h2>
    </div>

    <!-- Cocktails Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-0">
      {
        cocktails.map((cocktail) => (
          <div class="py-6 border-b border-[#F5F5F0]/20">
            <div class="flex justify-between items-start mb-2">
              <h3 class="font-sans text-lg text-[#F5F5F0] tracking-wide">
                {cocktail.name}
              </h3>
              <span class="text-[#E8B4B8] font-medium">
                Â£{cocktail.price}
              </span>
            </div>
            <p class="text-sm text-[#F5F5F0]/60">
              {cocktail.description}
            </p>
          </div>
        ))
      }
    </div>

    <!-- Footer Note -->
    <p class="text-center text-[#F5F5F0]/60 text-sm mt-12">
      Plus craft beers, premium gins, wines & more
    </p>
  </div>
</section>
