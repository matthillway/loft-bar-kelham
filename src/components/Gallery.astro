---
// Gallery section - Botanical themed with real venue photos
interface GalleryImage {
  src: string;
  alt: string;
  className?: string;
}

const images: GalleryImage[] = [
  {
    src: "/images/hero-interior.jpg",
    alt: "Loft Bar interior with hanging wisteria and green wall",
    className: "row-span-2",
  },
  {
    src: "/images/cocktail-blackberry.jpg",
    alt: "Blackberry cocktail with rosemary garnish",
  },
  {
    src: "/images/cocktail-pink.jpg",
    alt: "Pink cream cocktail",
  },
  {
    src: "/images/cocktails-trio.jpg",
    alt: "Trio of signature cocktails",
    className: "col-span-2",
  },
  {
    src: "/images/cocktail-martini.jpg",
    alt: "Martini with apple garnish",
  },
  {
    src: "/images/interior-brick.jpg",
    alt: "Bar interior with exposed brick",
  },
];
---

<section id="gallery" class="py-24 md:py-32 lg:py-40 bg-[#F5F5F0]">
  <div class="max-w-7xl mx-auto px-6 md:px-8">

    <!-- Section Header -->
    <div class="flex flex-col md:flex-row md:items-end md:justify-between mb-12 md:mb-16">
      <div>
        <p class="text-xs tracking-[0.3em] uppercase text-[#5D6B5D] mb-4 font-sans font-medium">The Atmosphere</p>
        <h2 class="font-sans text-2xl md:text-3xl text-[#2A2A2A] tracking-[0.1em] uppercase font-light">Inside The Loft</h2>
      </div>
      <a href="https://instagram.com/loftkelham" target="_blank" rel="noopener noreferrer" class="mt-6 md:mt-0 inline-flex items-center text-sm text-[#5D6B5D] hover:text-[#4A5A4A] transition-colors font-sans">
        <span>Follow @loftkelham</span>
        <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>

    <!-- Gallery Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 gap-3 md:gap-4">
      {images.map((image) => (
        <div class={`rounded-sm overflow-hidden group ${image.className || ''} ${!image.className?.includes('col-span') && !image.className?.includes('row-span') ? 'aspect-square' : ''}`}>
          <img
            src={image.src}
            alt={image.alt}
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            loading="lazy"
          />
        </div>
      ))}
    </div>

  </div>
</section>
